.wrapper

   

  .side-bar
    .header
      %h3.header__name
        = current_user.name
      %ul.header__lists
        %li.list
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.list
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
    .groups
      .group
        - current_user.groups.each do |group|
          = link_to '#' do
            .group__name
              = group.name
            .group__message
              メッセージはまだありません。
      
  .main-contents
    .header-main
      .header-main__groupname group-name
      .header-main__member member
      %a{hred: '#', class: 'edit-btn'} edit

    .main-message 
      %span.main-message__user user-name
      %span.main-message__day 2019/08/21(Wed) 15:50:00
      .main-message-text sample
    
  
    .form
      .form__box
        %label.form__type
        %input.message-send{:type => "text",:placeholder => "type a message"}
        %label.upload-label{for: "upload-icon"}
          %i.fa.fa-picture-o
          
          %input.message-btn1{type: 'file',name:"image",id: "upload-icon"}
      %input.form__message-btn2{type: 'submit',value: "send"}
        





